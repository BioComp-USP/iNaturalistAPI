doctype html
html( lang="en" )
  head
    title= "iNaturalist Observations"
    link( rel="stylesheet" href="http://cdnjs.cloudflare.com/ajax/libs/leaflet/0.7.3/leaflet.css" )
    link( rel="stylesheet" href="http://www.inaturalist.org/assets/application_bundle-1f2cc983f082599fee342bd1a99095f1.css")
    script( src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js" )
    script( src="https://cdnjs.cloudflare.com/ajax/libs/underscore.js/1.8.3/underscore.js" )
    script( src="http://cdnjs.cloudflare.com/ajax/libs/leaflet/0.7.3/leaflet.js" )
    script( src="leaflet.utfgrid.js" )
    style.
      #map { height: 400px; }
      #search {
        margin: 10px;
        font-size: 10pt;
      }
      #search .row {
        padding-bottom: 2px;
      }
      #search input { margin-right: 15px; }
      .observations.infowindow .observation { padding-bottom: 0px; padding: 0px; }
      .infowindow.observations .observation .attribute .othernames { display: block !important; }
      .leaflet-popup-content {
        margin: 10px 10px 8px;
        font: 13px "Helvetica Neue", Arial, Helvetica, sans-serif; }
  body
    .search_form
      form#search( action="#" )
        .row
          = "Search:"
          input( type="text", name="q" )
          = "TaxonName:"
          input( type="text", name="taxon_name" )
          = "ProjectID:"
          input( type="text", name="project_id" )
          = "UserID:"
          input( type="text", name="user_id" )
        .row
          = "Rank:"
          input( type="text", name="rank" )
          = "hRank:"
          input( type="text", name="hrank" )
          = "lRank:"
          input( type="text", name="lrank" )
        .row
          = "Day:"
          input( type="text", name="day" )
          = "Month:"
          input( type="text", name="month" )
          = "Year:"
          input( type="text", name="year" )
          input( type="submit", value="Update" )
    #map
    script( src="facets.js" )
